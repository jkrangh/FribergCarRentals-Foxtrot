@page
@model FribergCarRentals_Foxtrot.Pages.Admin.Cars.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Bilar</h1>

<p>
    <a asp-page="Create">Lägg till ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].CarId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Model)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Car[0].IsAvailable)
            </th>
                     
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarId)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
      
          
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CarId">Ändra</a> |
                <a asp-page="./Details" asp-route-id="@item.CarId">Detaljvy</a> |
                <a asp-page="./Delete" asp-route-id="@item.CarId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
