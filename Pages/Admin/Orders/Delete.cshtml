@page
@model FribergCarRentals_Foxtrot.Pages.Admin.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div class="orderContainer">
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order.StartDate)</th>
            <td>@Html.DisplayFor(model => model.Order.StartDate)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order.EndDate)</th>
            <td>@Html.DisplayFor(model => model.Order.EndDate)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Order.User)</th>
            <td>@Html.DisplayFor(model => model.Order.User.Email)</td>
        </tr>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Order.OrderId" />
        <div class="buttonContainer">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
