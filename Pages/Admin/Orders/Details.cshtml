@page
@model FribergCarRentals_Foxtrot.Pages.Admin.Orders.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h2>Order Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.StartDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.EndDate.ToString("yyyy-MM-dd")
        </dd>

        <dt class="col-sm-2">
            Car Brand
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Car.Brand
        </dd>

        <dt class="col-sm-2">
            User Email
        </dt>
        <dd class="col-sm-10">
            @Model.Order.User.Email
        </dd>


    </dl>
</div>

<p>
    <a asp-page="./Edit" asp-route-id="@Model.Order.OrderId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</p>