@page
@model FribergCarRentals_Foxtrot.Pages.Admin.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Användare</h1>

<p>
    <a asp-page="Create">Lägg till ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User[0].Password)
            </th>
          <th>
                @Html.DisplayNameFor(model => model.User[0].IsAdmin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.UserId">Ändra</a> |
                <a asp-page="./Details" asp-route-id="@item.UserId">Detaljvy</a> |
                <a asp-page="./Delete" asp-route-id="@item.UserId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
