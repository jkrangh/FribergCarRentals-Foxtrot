@page
@model FribergCarRentals_Foxtrot.Pages.Customer.Cars.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post" asp-page-handler="Filter">
    <div class="form-group">
        <label for="StartDate">Start Date:</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date:</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].IsAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach (var item in Model.Cars)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAvailable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.CarId">Details</a> |
                        <a asp-page="/Customer/Orders/Create" asp-route-carId="@item.CarId">Boka</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <p>Not found</p>
        }

    </tbody>
</table>
