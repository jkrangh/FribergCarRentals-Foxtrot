<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FribergCarRentals_Foxtrot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FribergCarRentals_Foxtrot.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
            
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Startsida</a>
                        </li>
                          <li class="nav-item">
                          <a class="nav-link text-dark" asp-area="" asp-page="/Customer/Cars/Index">Lista Bilar</a>
                          </li>
                    </ul>
                    @if (Context.Session.GetString("IsAdmin") != null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                           
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Orders/Index">Admin Bokningar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Cars/Index">Admin Bilar</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Users/Index">Admin Användare</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Categories/Index">Admin Kategorier</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Cars/CarDates">Kommande Bokningar</a>
                            </li>
                        </ul>
                    }
                    <div>
                        @if (Context.Session.GetString("Email") != null)
                        {
                            <p>Väkommen @Context.Session.GetString("Email")</p>
                            <form method="post" asp-page="/UserTracking/Logout">
                                <button type="submit">Logga ut</button>
                            </form>
                                                    
                        }
                        else
                        {
                            <p></p>
                            <a href="@Url.Page("/UserTracking/Login")">Logga in</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <div class="logo"><img src="~/css/FribergLogga.jpg" alt="A car with fire in the background" class="border logo"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FribergCarRentals_Foxtrot - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
